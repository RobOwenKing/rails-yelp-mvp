<h1>Add a new restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :category, as: :select, collection: ['Chinese', 'Italian', 'Japanese', 'French', 'Belgian'] %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "Add restaurant", class: "btn btn-primary" %>
<% end %>
